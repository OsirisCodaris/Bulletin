<section id="contact" name="contact">
    <div id="footerwrap">
      <div class="container ">
        <div class="row">
       
         
          <div class="col-lg-5" data-aos="fade-right">
            
            <h3>Codaris</h3>
            <p>
              Mbaya,<br/> Franceville,<br/>GABON
            </p>
            <p>
                Tél,<br/>
              (+241) 074 713 473 - 066 413 160 - 066 915 615
            </p>
          </div>

          <div class="col-lg-6" data-aos="flip-left">
            <h3>Conctatez-nous</h3>

            <br>
            <form class="contact-form php-mail-form" role="form" method="POST">

              <div class="form-group">
                <label for="contact-name">Votre Nom</label>
                <input type="name" name="name" class="form-control" id="contact-name" v-model="name" placeholder="Entrez votre nom" data-rule="minlen:4" data-msg="Le nombre de caractères requis doit ëtre supérieur à 3">
                <div class="validate"></div>
              </div>
              <div class="form-group">
                <label for="contact-email">Votre Email</label>
                <input type="email" name="email" class="form-control" id="contact-email" v-model="to" placeholder="Entrez votre email" data-rule="email" data-msg="L'adresse mail n'est pas valide">
                <div class="validate"></div>
              </div>
              <div class="form-group">
                <label for="contact-number">Votre Numéro de Téléphone</label>
                <input type="text" name="contact" class="form-control" id="contact-number" v-model="contact" placeholder="Entrez votre numéro" data-rule="contact" data-msg="Entrez un contact valide">
                <div class="validate"></div>
              </div>
              <div class="form-group">
                <label for="contact-subject">Sujet</label>
                <input type="text" name="subject" class="form-control" id="contact-subject" v-model="subject" placeholder="Le Sujet" data-rule="minlen:4" data-msg="Le nombre de caractères requis doit ëtre supérieur à 3">
                <div class="validate"></div>
              </div>

              <div class="form-group">
                <label for="contact-message">Votre Message</label>
                <textarea class="form-control" name="message" id="contact-message" v-model="message" placeholder="Votre Message" rows="5" data-rule="required" data-msg="Dites nous plus"></textarea>
                <div class="validate"></div>
              </div>

              <div class="loading"></div>
              <div class="error-message"></div>
              <div class="sent-message">Votre message a été envoyé. Merci!</div>

              <div class="form-send">
                <button type="submit" class="btn btn-large" v-on:click="send">Envoyez le Message</button>
              </div>

            </form>

          </div>
        </div>
      </div>
    </div>
  </section>
